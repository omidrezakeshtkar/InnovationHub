{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./node_modules/@types", "@types"],
		"types": ["node", "express"],
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*", "src/**/*.html", "src/**/*.tsx", "src/**/*.jsx"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
