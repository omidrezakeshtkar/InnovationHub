{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/types" // Ensure this path is correct
		],
		"types": ["node", "express"] // Include any other types you need
	},
	"include": ["src/**/*", "src/**/*.html"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
